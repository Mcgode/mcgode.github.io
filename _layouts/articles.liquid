---
layout: default
---

<div class="home">
  {%- if page.title -%}
    <h1 class="page-heading">{{ page.title }}</h1>
  {%- endif -%}

  {{ content }}

  {%- if site.articles.size > 0 -%}
    {% comment %}<h2 class="post-list-heading">{{ page.list_title | default: "Articles" }}</h2>{% endcomment %}
    <ul class="post-list">
      {%- for article in site.articles -%}
      <li>
        {%- assign date_format = site.minima.date_format | default: "%b %-d, %Y" -%}
        <span class="post-meta">{{ article.date | date: date_format }}</span>
        <h3>
          <a class="post-link" href="{{ article.url | relative_url }}">
            {{ article.title | escape }}
          </a>
        </h3>
        {%- if site.show_excerpts -%}
          {{ article.excerpt }}
        {%- endif -%}
      </li>
      {%- endfor -%}
    </ul>
  {%- else -%}
      <p>
          Oh no, it seems so far I've been standing around doing nothing to finish my articles!
      </p>
  {%- endif -%}

</div>
